@model IEnumerable<PaggingMVC.Models.Person>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-md-4">
            <div class="well text-center">
                @item.Name
            </div> 

        </div>
    }
</div>
<div class="row text-center">
    <nav aria-label="...">
        <ul class="pagination">
            <li class="disabled"><a href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>

            @for (int i = 1; i <= (ViewBag.PageCount + 1); i++)
            {
                <li class="@(((int)ViewBag.PageID==i)?"active":"")"><a href="/Home/Index?pageid=@i">@i <span class="sr-only">(current)</span></a></li>
            }
            <li><a aria-label="Next" href="#"><span aria-hidden="true">>></span></a></li>
        </ul>
    </nav>

</div>